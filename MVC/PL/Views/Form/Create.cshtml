@model FollowUpFormDto

@{
    ViewData["Title"] = "Create Follow-Up Form";
}

<h1>Create Follow-Up Form</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="@Model.RequestId">Request Id</label>
        <textarea class="form-control" asp-for="@Model.RequestId" name="Question1"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Question1">Did you face any problems with the site? if yes, state them briefly.</label>
        <textarea class="form-control" asp-for="@Model.Question1" name="Question1"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Question2">Did you face any problems with the communication ? if yes, state them briefly.</label>
        <textarea class="form-control" asp-for="@Model.Question2" name="Question2"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Question3">Did you face any problems with the donation process? if yes, state them briefly.</label>
        <textarea class="form-control" asp-for="@Model.Question3" name="Question3"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Question4">Did you face any problems with the Patient / Donor / Hospital ? if yes, state them briefly.</label>
        <textarea class="form-control" asp-for="@Model.Question4" name="Question4"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Feedback">Feedback</label>
        <textarea class="form-control" asp-for="@Model.Feedback" name="Question4"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
