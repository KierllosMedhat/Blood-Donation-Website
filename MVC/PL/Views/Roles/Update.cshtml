@model ApplicationRole

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}

<h1>Update Role</h1>
<br />
<br />

<div class="row">
    <div class="col-6">
        <form asp-action="Update" asp-controller="Roles">
            @Html.ValidationSummary(true,"", new { @class = "text-danger"})
            <input hidden asp-for="Id" />
            <partial name="PartialViews/CreateEditPartialView" model="@Model" />
            <br />
            <a class="btn btn-secondary" asp-action="AddOrRemoveUsers" asp-route-id="@Model.Id">Add Or Remove Users</a>
            <br />
            <input type="submit" value="Save" class="btn btn-primary" />
            <a class="btn btn-light" asp-action="Index">Back To List</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}